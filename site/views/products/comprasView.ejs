<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('../partials/head')%>
        <link rel="stylesheet" href="/css/styles-form.css">
        <link rel="stylesheet" href="/css/productCart.css">
        <link rel="stylesheet" href="/css/compra.css">
</head>

<body>

    <%- include('../partials/header')%>

        <main>
            <section>
                <h2>Compras de <%= purchases[0].user.name %>
                </h2>
                <% for( let i=0; i < purchases.length; i++ ) { %>
                    <div class="compra-container">
                        <div class="headLista">
                            <h3>Nro de compra: <%= purchases[i].id%>
                            </h3>
                            <h3>Fecha de compra: <%= purchases[i].fecha %>
                            </h3>
                        </div>
                        <% if (purchases[i].pedidos.length> 0) { %>
                            <% for( let j=0; j < purchases[i].pedidos.length; j++ ) { %>
                                <div class="compra-datos">
                                    <img src="/img/products/<%= purchases[i].pedidos[j].producto.imagenes[0].imagen %> "
                                        alt="imagen de producto">
                                    <h3>
                                        <%= purchases[i].pedidos[j].producto.nombre%>
                                    </h3>
                                    <p>
                                        <%= purchases[i].pedidos[j].cantidad %>
                                    </p>
                                    <p>
                                        <%= purchases[i].pedidos[j].precio_compra %>
                                    </p>

                                    <% } %>
                                        <% } else { %>
                                            <div class="compra-datos">
                                                <img src="/img/products/<%= purchases[i].pedidos.producto.imagenes[0].imagen %> "
                                                    alt="imagen de producto">
                                                <h3>
                                                    <%= purchases[i].pedidos.producto.nombre%>
                                                </h3>
                                                <p>
                                                    <%= purchases[i].pedidos.cantidad %>
                                                </p>
                                                <p>
                                                    <%= purchases[i].pedidos.precio_compra %>
                                                </p>

                                                <% } %>
                                            </div>
                                            <% } %>

            </section>
        </main>

        <%- include('../partials/footer')%>

</body>
<!--  -->

</html>