<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('../partials/head')%>
        <link rel="stylesheet" href="/css/styles-form.css">
        <link rel="stylesheet" href="/css/productCart.css">
        <link rel="stylesheet" href="/css/compra.css">
</head>

<body>

    <%- include('../partials/header')%>

        <main>
            <section>
                <h2>Nueva Compra: </h2>
                <div class="compra-container">
                    <h3>Nro de compra: <%= `${compra[0].user_id}` + `${compra[0].compra.id}` %>
                    </h3>
                    <% for( let i=0; i < compra.length; i++ ) { %>
                        <div class="compra-datos">
                            <% if (compra[i].producto.imagenes.length> 0) { %>
                                <img src="/img/products/<%= compra[i].producto.imagenes[0].imagen %> "
                                    alt="imagen de producto">
                                <% } else { %>
                                    <img src="/img/products/default.jpg" alt="imagen de producto">
                                    <%} %>
                                        <h3>
                                            <%= compra[i].producto.nombre%>
                                        </h3>
                                        <p>
                                            <%= compra[i].producto.descripcion%>
                                        </p>
                                        <p>
                                            <%= compra[i].cantidad %>
                                        </p>
                                        <p>
                                            <%= compra[i].precio_compra %>
                                        </p>

                                        <% } %>

        </main>

        <%- include('../partials/footer')%>

</body>

</html>